@page
@model GaleriaModel
@{
    ViewData["Title"] = "Galeria de Imagens";
}

<h2>Galeria de Imagens</h2>

<div class="Galeria">
    @foreach (var imagem in Model.Imagens)
    {
        <div class="imagem">
            <img src="@imagem.Url" alt="@imagem.Descricao" />
            <p>@imagem.Descricao</p>
        </div>
    }
</div>

<style>
    .galeria {
        display: flex;
        flex-wrap: wrap;
    }

    .imagem {
        margin: 10px;
        text-align: center;
    }

    .imagem img {
        max-width: 150px;
        border-radius: 10px;
    }
</style>